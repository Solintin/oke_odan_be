{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "removeComments": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node", "express"], // ðŸ‘ˆ Ensure Express is loaded
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
